<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bf_over_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/live_over_bg_text"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="@string/bf_live_over_text"
        android:textColor="@color/white"
        android:textSize="22sp" />


    <RelativeLayout
        android:id="@+id/user_center_user_layout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bf_over_user_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/user_img_bg"
            android:contentDescription="@string/live_over_user_img_text"
            app:civ_border_color="#9c9c9c"
            app:civ_border_width="1dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/live_over_level_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/resource_v_101"
            app:civ_border_width="0dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/bf_over_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_center_user_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Scarlett"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/bf_over_layout1"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bf_over_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/live_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/live_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/live_duration_text"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/watched_num_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bf_over_total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/bf_over_total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/live_over_total_text"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contribution_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/contribution_total_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/contribution_total_text"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <!--<LinearLayout-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="1"-->
        <!--android:orientation="vertical">-->

        <!--<TextView-->
        <!--android:id="@+id/bf_over_like_num"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="24sp" />-->

        <!--<TextView-->
        <!--android:id="@+id/bf_over_like_text"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:gravity="center"-->
        <!--android:text="@string/live_over_like_text"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="18sp" />-->

        <!--</LinearLayout>-->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/blue_over_share_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bf_over_layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/blue_over_wechat_share_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:contentDescription="@string/bf_wechat_login_btn_text"
            android:src="@drawable/bf_liveover_wechat_btn" />

        <ImageView
            android:id="@+id/blue_over_wx_circle_share_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/bf_qqzone_login_btn_text"
            android:src="@drawable/bf_liveover_wx_circle_btn" />

        <ImageView
            android:id="@+id/blue_over_qq_share_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/bf_qq_login_btn_text"
            android:src="@drawable/bf_liveover_qq_btn" />
        <ImageView
            android:id="@+id/blue_over_qq_zone_share_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/bf_qq_login_btn_text"
            android:src="@drawable/bf_liveover_qq_zone_btn" />
        <ImageView
            android:id="@+id/blue_over_weibo_share_btn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_weight="1"
            android:contentDescription="@string/bf_qq_login_btn_text"
            android:src="@drawable/bf_liveover_weibo_btn" />
    </LinearLayout>

    <TextView
        android:id="@+id/bf_over_back_btn"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_below="@+id/blue_over_share_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/pre_start_live_button_selector"
        android:gravity="center"
        android:text="@string/bf_live_return"
        android:textColor="@drawable/button_font_style"
        android:textSize="16.3dp" />

    <TextView
        android:id="@+id/bf_over_delete"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_below="@+id/bf_over_back_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/bfliveover_delete_btn_selector"
        android:gravity="center"
        android:text="@string/bf_live_delete"
        android:textColor="@drawable/button_font_style"
        android:textSize="16.3dp" />
</RelativeLayout>
