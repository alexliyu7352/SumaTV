<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.ddm.live.activities.BFLoginActivity">
    <!--android:background="@mipmap/xz_login_bg"-->

    <ImageView
        android:id="@+id/xz_login_img1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/bg1" />

    <ImageView
        android:id="@+id/xz_login_img2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/logo_login_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:src="@mipmap/login_logo_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/edit_text_fram"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="163dp"
        android:text="选择登录方式"/>

    <LinearLayout
        android:id="@+id/butter_login_icon_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:id="@+id/butter_qq_login_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:contentDescription="@string/bf_qq_login_btn_text"
            android:src="@drawable/blue_login_qq_btn" />
        <ImageView
            android:id="@+id/butter_wechat_login_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:contentDescription="@string/bf_wechat_login_btn_text"
            android:src="@drawable/blue_login_wechat_btn" />

        <ImageView
            android:id="@+id/butter_phone_login_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:src="@drawable/blue_login_phone_btn" />

        <ImageView
            android:id="@+id/butter_weibo_login_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:contentDescription="@string/bf_weibo_login_btn_text"
            android:src="@drawable/blue_login_weibo_btn" />



    </LinearLayout>

    <RelativeLayout
        android:id="@+id/butter_login_word_layout"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/butter_login_icon_btn_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/butter_login_word_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/butter_login_word_findpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="忘记密码"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28.5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:text="点击登录，即表示同意"
            android:textColor="@color/white"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/xz_login_service_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:text="服务协议"
                android:textColor="@drawable/button_font_style"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!--<Button
        android:id="@+id/butter_login_wechat_btn"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="188dp"
        android:background="@drawable/butter_login_wechat_btn"
        android:contentDescription="@string/butter_login_wechat_des" />

    <Button
        android:id="@+id/butter_login_qq_btn"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@id/butter_login_wechat_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/butter_login_wechat_btn"
        android:contentDescription="@string/butter_login_qq_des"
        android:visibility="invisible" />-->

</RelativeLayout>
