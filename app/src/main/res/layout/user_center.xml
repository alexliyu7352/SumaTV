<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue_light">

    <RelativeLayout
        android:id="@+id/user_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_top_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:contentDescription="@string/user_content"
            android:src="@mipmap/user_login_bg" />

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@mipmap/user_img_bg"
            android:contentDescription="@string/user_content"
            android:src="@mipmap/user1" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/user_name"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/user_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/user_introduction"
            android:textColor="@color/white" />

        <RelativeLayout
            android:id="@+id/user_info_num"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_introduction"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/user_video_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:drawableTop="@mipmap/user_video_num_tag"
                android:gravity="center"
                android:textColor="@color/font_orange" />

            <TextView
                android:id="@+id/user_point_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/user_video_num"
                android:drawableTop="@mipmap/user_point"
                android:gravity="center"
                android:textColor="@color/font_orange" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/user_login_btn"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_below="@id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/user_content"
            android:src="@mipmap/user_login_btn" />

        <TextView
            android:id="@+id/user_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_top_bg"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/user_setting"
            android:textColor="@color/font_gray_deep" />

        <RelativeLayout
            android:id="@+id/user_setting_disturb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_setting_title"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_disturb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/user_disturb"
                android:textColor="@color/font_gray_deep"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/user_disturb_layout"
                android:layout_width="55dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/user_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_setting_disturb"
            android:background="@color/white"
            android:contentDescription="@string/user_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/user_line" />

        <RelativeLayout
            android:id="@+id/user_setting_remind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_line1"
            android:background="@color/white"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/user_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/user_remind"
                android:textColor="@color/font_gray_deep"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/user_remind_layout"
                android:layout_width="55dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/user_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_setting_remind"
            android:background="@color/white"
            android:contentDescription="@string/user_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@mipmap/user_line" />

        <TextView
            android:id="@+id/user_clean_cache"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@id/user_line2"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="@string/user_cache"
            android:textColor="@color/font_gray_deep"
            android:textSize="14sp" />
    </RelativeLayout>

    <include layout="@layout/bottom_banner" />
</RelativeLayout>
