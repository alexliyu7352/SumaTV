<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/user_not_self_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/user_not_self_pop_report_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/le_user_home_video_more_btn"
            android:gravity="center"
            android:text="@string/bf_report_text"
            android:textColor="@color/le_font_red"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/user_not_self_pop_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/le_user_home_video_more_btn"
            android:gravity="center"
            android:text="@string/le_user_home_pop_cancel_text"
            android:textColor="@color/le_font_black"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_self_pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/user_self_pop_delete_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/le_user_home_video_more_btn"
            android:gravity="center"
            android:text="@string/le_user_home_pop_delete_text"
            android:textColor="@color/le_font_red"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/user_self_pop_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/le_user_home_video_more_btn"
            android:gravity="center"
            android:text="@string/le_user_home_pop_cancel_text"
            android:textColor="@color/le_font_black"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>
