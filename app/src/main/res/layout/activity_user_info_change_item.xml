<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ddm.live.activities.UserInfoChangeItemActivity">

    <RelativeLayout
        android:id="@+id/user_change_info_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_change_info_back_btn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="@string/home_page_user_img"
            android:scaleType="center"
            android:src="@mipmap/xz_back_black" />

        <TextView
            android:id="@+id/user_change_info_title_text"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/user_change_info_back_btn"
            android:gravity="center_vertical"
            android:text="修改项目"
            android:textColor="@color/xz_font_black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user_change_info_submit_text"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="完成"
            android:textColor="@color/xz_font_black"
            android:textSize="20sp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xz_line_gray" />

    <com.ddm.live.utils.EditTextWithDel
        android:id="@+id/user_change_info_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:maxLines="1"
        android:drawablePadding="6dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="22dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_change_info_editor_text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/le_font_gray"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/le_font_gray"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/user_change_info_editor_text_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:textColor="@color/le_font_gray"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>
