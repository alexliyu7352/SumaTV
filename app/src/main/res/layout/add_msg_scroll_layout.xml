<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_msg_linearlayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.ddm.live.utils.RoundRectImageView
        android:id="@+id/msg_user_header"
        android:layout_width="51dp"
        android:layout_height="53dp"
        android:layout_marginLeft="6dp"
        android:scaleType="fitXY"
        android:src="@mipmap/user1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:background="@drawable/xz_msg_background_white"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <!--        android:background="@drawable/normal_message_background"-->

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:paddingBottom="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/msg_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/xz_font_gray"
            android:textSize="12sp" />

