<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/contentPanel"
        android:layout_width="wrap_content"
        android:layout_height="379dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="56dp"
        android:background="@mipmap/white_background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/titlePanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:background="@mipmap/ledao_logo" />

            <TextView
                android:id="@+id/update_version_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:text="小主新版"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/update_version_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="更好的秀出你的精彩"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/update_version_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="最新版本:2.0.2"
                    android:textColor="@color/black"
                    android:textSize="10.5sp" />

                <TextView
                    android:id="@+id/update_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="发布日期:2016/09/23"
                    android:textColor="@color/black"
                    android:textSize="10.5sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/update_content_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlePanel"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp"
            android:drawableLeft="@mipmap/dot_shape"
            android:drawablePadding="5dp"
            android:textSize="14sp"
            android:text="更新内容" />
        <TextView
            android:id="@+id/update_content"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/update_content_title"
            android:text="1.视频链接功能，直播互动更精彩"
            />

        <TextView
            android:id="@+id/update_btn"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:background="@mipmap/bgd_button_sure"
            android:gravity="center" />
    </RelativeLayout>
    <TextView
        android:id="@+id/close_btn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:layout_marginTop="113dp"
        android:background="@mipmap/cancel" />
</RelativeLayout>