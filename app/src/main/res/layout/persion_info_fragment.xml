<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="325dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/persional_info_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:background="@drawable/person_info_panel_background"
            android:clickable="true">

            <RelativeLayout
                android:id="@+id/top_pannel"
                android:layout_width="match_parent"
                android:layout_height="161dp">

                <TextView
                    android:id="@+id/report_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/report"
                    android:textColor="@color/purple"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/manage_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/report_btn"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:text="@string/manage"
                    android:textColor="@color/purple"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:id="@+id/name_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="55dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/sex"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="4dp" />

                    <ImageView
                        android:id="@+id/level"
                        android:layout_width="26dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ledao_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name_level"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="小主号"
                        android:textColor="@color/light_white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/le_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:textColor="@color/light_white"
                        android:textSize="13sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sign"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/ledao_top"
                    android:layout_marginTop="24.5dp"
                    android:gravity="center"
                    android:text="ta 好像忘记写签名"
                    android:textColor="@color/light_white"
                    android:textSize="13sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/focus_fans"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/top_pannel"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fans_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_blue_manage_word"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="粉丝"
                        android:textColor="@color/font_blue_manage_word"
                        android:textSize="11sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/divide_line"
                    android:layout_width="1dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/xz_line_gray_light" />
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/focus_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_blue_manage_word"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="关注"
                        android:textColor="@color/font_blue_manage_word"
                        android:textSize="11sp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/horizontal_divideline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/focus_fans"
                android:background="@color/xz_line_gray_light" />

            <LinearLayout
                android:id="@+id/bottom_pannel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/focus_fans"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/focus_cancel_btn"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:clickable="false"
                    android:textColor="@color/purple"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/at_user_btn"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/purple"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/home_page_btn"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/purple"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/headImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/user_img_bg"
                android:contentDescription="@string/bf_user_head_img"
                android:src="@mipmap/user1"
                app:civ_border_color="#9c9c9c"
                app:civ_border_width="1dp" />

            <ImageView
                android:id="@+id/user_info_level_tag"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/resource_v_101" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>