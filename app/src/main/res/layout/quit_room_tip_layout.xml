<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:layout_gravity="center"
    android:background="@drawable/recharge_dialog_panel_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="确定退出直播？"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/message_background_color"/>
        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="点击确定即可退出本次直播"
            android:textColor="@color/xz_font_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="24dp"
        android:background="@color/xz_line_gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/quit_chatroom_btn_selector"
            android:gravity="center"
            android:text="取消"
            android:clickable="true"
            android:textColor="@drawable/quit_chatroom_text_selector"
            android:textSize="13sp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divideline3"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/quit_chatroom_btn_selector"
            android:gravity="center"
            android:clickable="true"
            android:text="确定"
            android:textColor="@drawable/quit_chatroom_text_selector"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>